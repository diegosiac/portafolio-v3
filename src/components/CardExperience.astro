---
import type { Experience } from "@/interfaces"

interface Props {
	experience: Experience
}

const { experience } = Astro.props

const { company, description, period, position, urlCompany } = experience
---

<article class="flex flex-col md:flex-row gap-2 md:gap-5 border-b border-foreground/40 p-10 w-full">
	<div>
		<span>{period}</span>
	</div>

	<div class="space-y-2">
		<h3 class="text-2xl font-semibold">{position}</h3>
		{
			urlCompany ? (
				<a class="font-semibold hover:underline" href={urlCompany} target="_blank" rel="noreferrer noopener">
					{company}
				</a>
			) : (
				<span class="font-semibold">{company}</span>
			)
		}
		<p class="max-w-[65ch]">{description}</p>
	</div>
</article>
