---
interface Props {
	skill: string
}

const { skill } = Astro.props
---

<div class="relative">
	<div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
		<slot name="icon-bg" />
	</div>
	<div
		class="flex w-[80px] flex-col items-center justify-between gap-4 rounded bg-secondary-blur p-2 text-center shadow-2xl backdrop-blur-lg"
	>
		<slot />

		<p class="text-xs font-semibold">{skill}</p>
	</div>
</div>
