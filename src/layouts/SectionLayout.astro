---
interface Props {
	sectionName: string
	title: string
	description: string
}

const { sectionName, title, description } = Astro.props
---

<section class="mt-20">
	<header
		class="mx-auto mb-12 flex max-w-prose flex-col items-center gap-1 text-center"
	>
		<h2
			class="mb-2 rounded bg-primary px-2 py-1 text-sm font-medium text-secondary"
		>
			<slot name="icon" />
			<span class="ml-1">
				{sectionName}
			</span>
		</h2>
		<h3 class="text-balance text-5xl font-bold">
			{title}
		</h3>
		<p class="opacity-80">
			{description}
		</p>
	</header>

	<slot />
</section>
