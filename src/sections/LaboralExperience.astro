---
import CardExperience from "@/components/CardExperience.astro"
import { experience } from "@/data"
import Hat from "../icons/hat.astro"
---

<section class="mt-20">
	<h2 class="flex items-center gap-5 text-2xl font-bold">
		<Hat class="size-8 stroke-2" /> Experiencia Laboral
	</h2>

	<div class="mt-10 flex flex-col gap-5">
		{experience.map((exp) => <CardExperience experience={exp} />)}
	</div>
</section>
