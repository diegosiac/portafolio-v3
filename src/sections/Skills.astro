---
import { CardSkill } from "@/components/CardSkill"
import GroupSkill from "@/components/GroupSkill.astro"
import Tool from "@/icons/tool.astro"

// icons

import Angular from "@/icons/angular.astro"
import Aws from "@/icons/aws.astro"
import Cypress from "@/icons/cypress.astro"
import Django from "@/icons/django.astro"
import Docker from "@/icons/docker.astro"
import ExpressJs from "@/icons/expressjs.astro"
import Git from "@/icons/git.astro"
import JavaScript from "@/icons/javascript.astro"
import Jest from "@/icons/jest.astro"
import NestJS from "@/icons/nestjs.astro"
import NextJS from "@/icons/nextjs.astro"
import NodeJs from "@/icons/nodejs.astro"
import Playwright from "@/icons/playwright.astro"
import PostgreSQL from "@/icons/postgresql.astro"
import Python from "@/icons/python.astro"
import React from "@/icons/react.astro"
import Redis from "@/icons/redis.astro"
---

<section class="mt-20">
	<h2 class="flex items-center gap-5 text-2xl font-bold">
		<Tool class="size-8 stroke-2" /> Mi Stack de Desarrollo
	</h2>

	<div class="mt-16 flex w-full items-center justify-center">
		<div class="relative grid w-max grid-cols-4 gap-2 sm:grid-cols-5">
			<h3
				class="absolute left-1/2 top-1/2 -z-10 -translate-x-1/2 -translate-y-1/2 text-[130px] font-black tracking-[-0.1ch] text-primary opacity-15 sm:text-[200px] md:block md:text-[250px] lg:text-[270px]"
			>
				SKILLS
			</h3>
			<GroupSkill>
				<CardSkill skill="JavaScript" client:visible>
					<JavaScript class="size-8" />
				</CardSkill>
				<CardSkill skill="React" client:visible>
					<React class="size-8" />
				</CardSkill>
				<CardSkill skill="Playwright" client:visible>
					<Playwright class="size-10" />
				</CardSkill>
			</GroupSkill>
			<GroupSkill>
				<CardSkill skill="PostgreSQL" client:visible>
					<PostgreSQL class="size-8" />
				</CardSkill>
				<CardSkill skill="Docker" client:visible>
					<Docker class="size-8" />
				</CardSkill>
				<CardSkill skill="Django" client:visible>
					<Django class="size-8" />
				</CardSkill>
				<CardSkill skill="NodeJs" client:visible>
					<NodeJs class="size-10" />
				</CardSkill>
			</GroupSkill>
			<GroupSkill>
				<CardSkill skill="Python" client:visible>
					<Python class="size-10" />
				</CardSkill>
				<CardSkill skill="NextJS" client:visible>
					<NextJS class="size-8" />
				</CardSkill>
				<CardSkill skill="Angular" client:visible>
					<Angular class="size-8" />
				</CardSkill>
			</GroupSkill>
			<GroupSkill>
				<CardSkill skill="Cypress" client:visible>
					<Cypress class="size-10" />
				</CardSkill>
				<CardSkill skill="Jest" client:visible>
					<Jest class="size-8" />
				</CardSkill>
				<CardSkill skill="NestJS" client:visible>
					<NestJS class="size-8" />
				</CardSkill>
				<CardSkill skill="AWS" client:visible>
					<Aws class="size-8" />
				</CardSkill>
			</GroupSkill>
			<GroupSkill class="hidden sm:flex">
				<CardSkill skill="Redis" client:visible>
					<Redis class="size-8" />
				</CardSkill>
				<CardSkill skill="ExpressJs" client:visible>
					<ExpressJs class="size-8" />
				</CardSkill>
				<CardSkill skill="Git" client:visible>
					<Git class="size-8" />
				</CardSkill>
			</GroupSkill>
		</div>
	</div>
</section>
