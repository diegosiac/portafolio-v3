---
import GitHub from "@/icons/github.astro"
import LinkedIn from "@/icons/linkedin.astro"
import Mail from "@/icons/mail.astro"
import { Image } from "astro:assets"
---

<section class="flex h-screen w-full gap-20 pb-10 pt-24">
	<div class="flex w-min flex-col justify-between">
		<h1 class="font-ubuntu text-8xl font-black leading-none">
			Diego Cruz
			<span
				class="-ml-3 inline-flex size-4 animate-fade-in-up items-center justify-center animate-duration-200"
			>
				<span
					class="absolute inline-flex h-full w-full animate-spin rounded-full bg-primary opacity-75 animate-iteration-count-infinite"
				></span>
				<span class="relative inline-flex h-full w-full rounded-full bg-primary"
				></span>
			</span>
		</h1>

		<div class="font-oxanium w-min space-y-1 whitespace-nowrap font-medium">
			<h2 class="text-lg">Desarrollador de Software</h2>
			<hr class="border-primary" />
			<p class="text-base">@diegosiac</p>
		</div>

		<div class="font-oxanium flex items-center gap-2">
			<span class="text-6xl font-bold">+1</span>

			<div class="text-sm font-bold">
				<p>Año de</p>
				<span>experiencia</span>
			</div>
		</div>
	</div>

	<div class="relative w-full">
		<Image
			src="https://www.distritomax.com/cdn/shop/products/funko-pop-chukie-los-rugrats_1000x1000.png?v=1646928608"
			alt="asdf"
			width={300}
			height={300}
			class="absolute bottom-0 left-[35px] h-[600px] w-[700px] animate-fade-in-up object-cover animate-duration-200"
		/>
		<p
			class="font-oxanium absolute left-0 top-44 flex max-w-[30ch] flex-col text-xs leading-tight"
		>
			<span class="font-tourney pb-2 text-base"> X/DIEGOSIAC </span>

			Lorem ipsum dolor sit amet consectetur adipisicing elit. Iure quasi maxime
			iste
		</p>

		<p
			class="font-oxanium absolute right-0 top-0 flex rotate-90 flex-col border-b border-primary text-xl font-medium leading-tight"
		>
			X-SIAC
			<span>MATERIALES</span>
			<span>DE CREACIÓN</span>
		</p>
		<div
			class="absolute bottom-0 right-0 flex animate-fade-in-up flex-col gap-5 p-4 animate-duration-200"
		>
			<a
				href="#"
				target="_blank"
				class="flex items-center transition-colors hover:text-secondary"
			>
				<Mail class="size-6" />
			</a>
			<a
				href="https://www.linkedin.com/in/diegosiac/"
				target="_blank"
				class="flex items-center transition-colors hover:text-secondary"
			>
				<LinkedIn class="size-6" />
			</a>
			<a
				href="https://github.com/diegosiac"
				target="_blank"
				class="flex items-center transition-colors hover:text-secondary"
			>
				<GitHub class="size-6" />
			</a>
		</div>
		<div
			class="bg-orange/70 absolute bottom-0 -z-10 h-1/2 w-full rounded-xl backdrop-blur-md"
		>
		</div>
	</div>
</section>
